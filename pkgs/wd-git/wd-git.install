post_install() {
    echo "======================================================"
    echo "                                                      "
    echo "                     to use wd ...                    "
    echo "       link and source desired shell's wrapper        "
    echo "                                                      "
    echo " wrappers in ${pkgdir}/usr/share/wd/wd{.sh|.zsh|.fish}"
    echo "                                                      "
    echo " example for bash:                                    "
    echo "                                                      "
    echo "     # mkdir ~/bin/                                   "
    echo "     # ln -s ${pkgdir}/usr/share/wd/wd.sh ~/bin/wh.sh "
    echo "     # echo \"source ~/bin/wd.sh\" >> ~/.bashrc       "
    echo "                                                      "
    echo "======================================================"
}
