# Maintainer: jjacky
pkgname=intercourse
pkgver=0.0.1
pkgrel=1
pkgdesc="GTK+ GUI elements for scripts"
arch=('i686' 'x86_64')
url="https://bitbucket.org/jjacky/intercourse"
license=('GPL3+')
depends=('gtk3')
makedepends=('pkg-config')
source=(https://bitbucket.org/jjacky/$pkgname/get/$pkgver.tar.gz)
md5sums=('2d197273005aca5e2e64c304392c0636')

build() {
  cd "$srcdir"
  # archive is auto-generated by bitbucket, so name includes last commit
  _dir=$(ls | grep jjacky-$pkgname-)
  # moving it all in srcdir
  mv $_dir/* .
  # removing e.g. .hg_archival.txt or .hgtags
  rm -f $_dir/.hg*
  rmdir $_dir
  make
}

package() {
  cd "$srcdir"
  make DESTDIR="$pkgdir/" install
}

