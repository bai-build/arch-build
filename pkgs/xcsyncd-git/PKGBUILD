pkgname=xcsyncd-git
pkgver=${PKGVER:-autogenerated}
pkgrel=${PKGREL:-1}
pkgdesc="A utility for syncrhonizing Xorg clipboards"
arch=('i686' 'x86_64')
url="http://github.com/reconquest/xcsyncd"
license=('GPL')
depends=(libx11 xcb-util-wm libxfixes libxcb)
makedepends=(libx11 gengetopt)
source=(git://github.com/reconquest/xcsyncd)
md5sums=('SKIP')

pkgver() {
    cd "$srcdir/xcsyncd"
    local date=$(git log -1 --format="%cd" --date=short | sed s/-//g)
    local count=$(git rev-list --count HEAD)
    local commit=$(git rev-parse --short HEAD)
    echo "$date.${count}_$commit"
}

build() {
    cd "$srcdir/xcsyncd"
    make
}

package() {
    cd "$srcdir/xcsyncd"
    make install DESTDIR=$pkgdir
}
