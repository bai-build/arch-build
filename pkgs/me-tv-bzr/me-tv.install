pkgname=me-tv-bzr

post_install() {
	update-desktop-database -q
	usr/sbin/gconfpkg --install ${pkgname}
}

pre_upgrade() {
	pre_remove $1
}

post_upgrade() {
	post_install $1
	echo "If you run into errors after upgrading, try deleting ~/.local/share/me-tv/"
}

pre_remove() {
	usr/sbin/gconfpkg --uninstall ${pkgname}
}

post_remove() {
	update-desktop-database -q
}
