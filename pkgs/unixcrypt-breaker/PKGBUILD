# Maintainer: KingofToasters <dev@sgregoratto.me>
pkgname=unixcrypt-breaker
pkgver=0.2
pkgrel=1
pkgdesc='Break encryption of files generated by crypt(1)'
url='https://www.mathstat.dal.ca/~selinger/unixcrypt-breaker'
license=('GPL2')
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
source=("$url/download/$pkgname-$pkgver.tar.gz")
sha1sums=('a20cdad40b8368a4293099125142a7405c226d17')

build() {
  cd "$pkgname-$pkgver"
  ./configure --prefix="/usr"
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
