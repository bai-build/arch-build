post_install() {
  echo -n "Updating desktop MIME database..."
  update-desktop-database -q
  [ $? -eq 0 ] && echo " done." || echo " FAILED!"

  echo -n "Updating GTK icon cache..."
  gtk-update-icon-cache -qft /usr/share/icons/hicolor
  [ $? -eq 0 ] && echo " done." || echo " FAILED!"
}

post_upgrade() {
  post_install $1
}

