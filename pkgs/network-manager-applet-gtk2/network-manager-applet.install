post_install() {
  glib-compile-schemas /usr/share/glib-2.0/schemas
  gtk-update-icon-cache -f -q -t /usr/share/icons/hicolor
}

pre_upgrade() {
  if (( $(vercmp $2 0.9.6.0) < 0 )); then
    gconfpkg --uninstall network-manager-applet
  fi
}

post_upgrade() {
  post_install
}

post_remove() {
  post_install
}
